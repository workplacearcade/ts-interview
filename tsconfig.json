{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",
    "removeComments": true,
    "target": "es5",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "downlevelIteration": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules/*", "./src/**/*.test.ts", "./src/**/*.d.ts"]
}
